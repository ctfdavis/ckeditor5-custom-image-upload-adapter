{
    "compilerOptions": {
        "strict": true,
        "module": "commonjs",
        "target": "es2015",
        "experimentalDecorators": true,
        "removeComments": true,
        "declaration": true,
        "outDir": "./dist",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true
    },
    "include": ["src/**/*"],
    "exclude": ["./node_modules", "**/*.spec.ts", "./e2e"]
}
